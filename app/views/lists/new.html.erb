<div class="container my-5">
  <div class="form-wrapper">
    <h1 class="form-title">🆕 Créer une nouvelle liste</h1>

    <%= form_with model: @list, local: true do |form| %>
      <div class="mb-3">
        <%= form.label :name, "Nom de la liste", class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="d-flex justify-content-between align-items-center mt-4">
        <%= link_to "← Retour aux listes", lists_path, class: "btn custom-btn-outline" %>
        <%= form.submit "📁 Créer la liste", class: "btn custom-btn-gradient" %>
      </div>
    <% end %>
  </div>
</div>
